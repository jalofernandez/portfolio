                button.btn.fil-cat.menu__link.glitch(href='', data-rel='all', data-text='All') #{gallery.funnel.all}
                button.btn.fil-cat.menu__link.glitch(href='', data-rel='bcards', data-text='layout') #{gallery.funnel.layout}
                button.btn.fil-cat.menu__link.glitch(data-rel='web', data-text='photography') #{gallery.funnel.photography}
